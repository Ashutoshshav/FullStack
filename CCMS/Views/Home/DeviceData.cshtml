@model CCMS.CustomModel.DataModel

<div class="flex min-h-screen w-full items-center justify-center bg-gray-900 bg-gradient-to-br p-4 sm:mt-8 sm:p-8">
    <div class="mt-16 flex w-full flex-col justify-center rounded-lg border border-gray-600 bg-gray-800 p-6 text-gray-50 shadow-2xl sm:mt-0">
        <!-- Header Section -->
