                <span class="font-medium text-gray-50">@Model.visLive_s.P5</span>
            </div>
            <div class="flex justify-between border-b border-gray-300 pb-2">
                <span class="text-gray-50">RELAY</span>
                <span class="font-medium text-gray-50">@Model.visLive_s.P6</span>
            </div>
            <div class="flex justify-between border-b border-gray-300 pb-2">
                <span class="text-gray-50">ON TIME</span>
                <span class="font-medium text-gray-50">@Model.visLive_s.P7</span>
            </div>
            <div class="flex justify-between border-b border-gray-300 pb-2">
                <span class="text-gray-50">UNITS</span>
                <span class="font-medium text-gray-50">@Model.visLive_s.P8</span>
            </div>
        </div>
    </div>
</div>

<script>
    function getCookieValue(cookieName) {
        const cookies = document.cookie.split("; ");
        for (let cookie of cookies) {
            const [name, value] = cookie.split("=");
            if (name === cookieName) {
                return value;
            }
        }
        return null; // Return null if the cookie is not found
    }

    const token = getCookieValue("Token");
    if (token) {
        const btnOn = document.getElementById('btn-on');
        const btnOff = document.getElementById('btn-off');
        $(document).ready(function () {
            if (@Model.IMEI_Master_s.Status == 1) {
                btnOn.disabled = true;
                btnOn.classList.add('bg-gray-500');
                btnOn.classList.remove('bg-red-500', 'hover:bg-red-600');

                btnOff.disabled = false;
                btnOff.classList.add('bg-red-500', 'hover:bg-red-600');
                btnOff.classList.remove('bg-gray-500');
            } else if (@Model.IMEI_Master_s.Status == 2) {
                btnOff.disabled = true;
                btnOff.classList.add('bg-gray-500');
                btnOff.classList.remove('bg-red-500', 'hover:bg-red-600');

                btnOn.disabled = false;
                btnOn.classList.add('bg-red-500', 'hover:bg-red-600');
                btnOn.classList.remove('bg-gray-500');
            } else {
                btnOn.disabled = true;
                btnOn.classList.add('bg-gray-500');
                btnOn.classList.remove('bg-red-500', 'hover:bg-red-600');

                btnOff.disabled = true;
                btnOff.classList.add('bg-gray-500');
                btnOff.classList.remove('bg-red-500', 'hover:bg-red-600');
            }
        })

        var updateStatus = async (status, IMEI_no) => {
            try {
                console.log(status, IMEI_no)
                console.log(token)
                const response = await fetch(`/Home/UpdateIMEIStatus`, {
                    method: 'POST', // Use POST method to send data in the body
                    headers: {
                        'Content-Type': 'application/json', // Specify content type as JSON
                        // Authorization: `Bearer ${token}`,
                    },
                    body: JSON.stringify({
                        IMEI_no: IMEI_no,
                        Status: status,
                    }),
                });

                // Check if the response is successful
                if (!response.ok) {
                    throw new Error(`Failed to fetch wards: ${response.statusText}`);
                }

                // Parse the JSON response
                const data = await response.json();
                if (data.success) {
                    console.log("status:", data.data.status)


                    if (data.data.status == 1) {
                        btnOn.disabled = true;
                        btnOn.classList.add('bg-gray-500');
                        btnOn.classList.remove('bg-red-500', 'hover:bg-red-600');

                        btnOff.disabled = false;
                        btnOff.classList.add('bg-red-500', 'hover:bg-red-600');
                        btnOff.classList.remove('bg-gray-500');
                    } else if (data.data.status == 2) {
                        btnOff.disabled = true;
                        btnOff.classList.add('bg-gray-500');
                        btnOff.classList.remove('bg-red-500', 'hover:bg-red-600');

                        btnOn.disabled = false;
                        btnOn.classList.add('bg-red-500', 'hover:bg-red-600');
                        btnOn.classList.remove('bg-gray-500');
                    } else {
                        btnOn.disabled = true;
                        btnOn.classList.add('bg-gray-500');
                        btnOn.classList.remove('bg-red-500', 'hover:bg-red-600');

                        btnOff.disabled = true;
                        btnOff.classList.add('bg-gray-500');
                        btnOff.classList.remove('bg-red-500', 'hover:bg-red-600');
                    }
                } else {
                    alert(data.message)
                }
            } catch (err) {
                console.log(err)
            }
        }
    } else {
        window.location.href = '/auth/login';
    }
</script>
