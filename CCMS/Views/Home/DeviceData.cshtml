                <span class="font-medium text-gray-50">@Model.IMEI_Master_s.Ward</span>
            </div>
            <div class="flex justify-between border-b border-gray-300 pb-2">
                <span class="text-gray-50">LOCATION</span>
                <span class="font-medium text-gray-50">@Model.IMEI_Master_s.Location</span>
            </div>
            <div class="flex justify-between border-b border-gray-300 pb-2">
                <span class="text-gray-50">SIM NO</span>
                <span class="font-medium text-gray-50">5755183037858</span>
            </div>
            <div class="flex justify-between border-b border-gray-300 pb-2">
                <span class="text-gray-50">IMEI NO</span>
                <span class="font-medium text-gray-50">@Model.visLive_s.IMEI_no</span>
            </div>
            <div class="flex justify-between border-b border-gray-300 pb-2">
                <span class="text-gray-50">SC NO</span>
                <span class="font-medium text-gray-50">106-78</span>
            </div>
            <div class="flex justify-between border-b border-gray-300 pb-2">
                <span class="text-gray-50">PHASE</span>
                <span class="font-medium text-gray-50">1</span>
            </div>
            <div class="flex justify-between border-b border-gray-300 pb-2">
                <span class="text-gray-50">LAT LONG</span>
                <span class="font-medium text-gray-50">28.47194, 77.01211</span>
            </div>
        </div>

        <!-- Last Live Updates Section -->
        <div class="mb-8 rounded-lg bg-gray-700 py-3 text-center font-bold text-white shadow-md">
            LAST LIVE UPDATES
        </div>

        <!-- Live Updates -->
        <div class="grid-cols-1 grid gap-6 text-sm sm:grid-cols-2 sm:text-base md:grid-cols-3 lg:grid-cols-4">
            <div class="flex justify-between border-b border-gray-300 pb-2">
                <span class="text-gray-50">TIME</span>
                <span class="font-medium text-gray-50">@Model.visLive_s.DTIME_SYS</span>
            </div>
            <div class="flex justify-between border-b border-gray-300 pb-2">
                <span class="text-gray-50">VOLTAGE</span>
                <span class="font-medium text-gray-50">@Model.visLive_s.P1</span>
            </div>
            <div class="flex justify-between border-b border-gray-300 pb-2">
                <span class="text-gray-50">CURRENT</span>
                <span class="font-medium text-gray-50">@Model.visLive_s.P2</span>
            </div>
            <div class="flex justify-between border-b border-gray-300 pb-2">
